{
  "extends": "@tsconfig/node20/tsconfig.json",
  "compilerOptions": {
    "rootDir": "src", //Diretorio de codigos typescript
    "outDir": "lib", //diretorio de saida para os arquivos compilados
    "sourceMap": true, //gera mapas de origem para facilitar debug
    "noImplicitAny": true, //nao permite declaração de variaveis ou parametros sem tipo
    "noImplicitReturns": true, //verifica se todas as funções possuem tipo de retorno informado
    "noEmitOnError": true, //nao gera codigo JS caso haja algum erro durante o processo de compilação
    "strictNullChecks": true, //força a verificação de valores null ou undefined
    "noUnusedLocals": true, //sinaliza quando existem variaveis declaradas e nao utilizadas
  },
  "compileOnSave": true,
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.spec.ts"
  ]
}